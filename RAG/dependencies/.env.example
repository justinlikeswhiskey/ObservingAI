# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317
OTEL_EXPORTER_OTLP_INSECURE=true
OTEL_EXPORTER_OTLP_HEADERS=

# Service Configuration
SERVICE_NAME=rag-chatbot
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Optional: Specific Backend Configurations
# Uncomment and configure for your observability backend

# Splunk Observability Cloud
# OTEL_EXPORTER_OTLP_ENDPOINT=https://ingest.us1.signalfx.com:443
# OTEL_EXPORTER_OTLP_HEADERS=X-SF-Token=your-splunk-token

# Datadog
# OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.datadoghq.com:4317
# OTEL_EXPORTER_OTLP_HEADERS=DD-API-KEY=your-datadog-key

# New Relic
# OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.nr-data.net:4317
